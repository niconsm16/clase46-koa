extends ../layouts/main.pug

block content
    .flex.w-full.h-screen.min-h-full.max-h-full(style="background-image: url('https://bornrealist.com/wp-content/uploads/2017/11/shutterstock_437807485resized-compressor.jpg');\
    background-size: cover")
        .hidden.p-8.bg-gradient-to-r.from-black.to-transparent.h-full.items-center.text-white.text-3xl.text-left.italic(class='w-1/2 lg:w-2/3 md:flex drop-shadow-[0px_2px_2px_#000000ba]')
            | "Estamos cambiando al mumdo para nuestra conveniencia"
        .flex.w-full.h-full.items-center.px-8(class='md:w-1/2 lg:w-1/3')
            form#register.flex.flex-col.w-full.gap-2(action='/register' method='post')
                label.mb-4.text-3xl.text-center.font-bold.text-white(for='username' class='md:text-right drop-shadow-[0px_2px_2px_#0000006e]' style='font-family:sans-serif') Ingrese sus datos
                if exist
                    .w-full.py-2.px-4.bg-rose-700.text-neutral-100.text-center.rounded Disculpa, el usuario ingresado ya existe
                input#username.w-full.rounded.p-2.peer(name='username' type='email' placeholder='Ingrese su email' class='focus:outline-none focus:ring-0 focus:border-2 focus:border-green-500 invalid:border-zinc-500 invalid:text-red-600 focus:invalid:border-red-500 focus:invalid:ring-red-500' required='')
                input#password.w-full.rounded.p-2.peer(name='password' type='password' placeholder='Ingrese su contrase√±a' class='focus:outline-none focus:ring-0 focus:border-2 focus:border-green-500 invalid:border-zinc-500 invalid:text-red-600 focus:invalid:border-red-500 focus:invalid:ring-red-500' required='')
                button.w-full.text-white.mt-2.mx-auto.py-2.px-4.transition.duration-500.rounded(class='bg-[#50301bb0] hover:bg-slate-400') Crea mi cuenta!
                a.w-full.bg-black.opacity-50.text-center.text-white.mt-2.mx-auto.py-2.px-4.transition.duration-500.rounded(href='/login' class='hover:bg-white hover:opacity-100 hover:text-black') Loguearme
